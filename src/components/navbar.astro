<!--メニューボタンのアニメーション-->
<style>
  
  .logos {
  display: none;
  text-align: center;
}

.logos.appear {
  display: block;
  animation: 2s fadeIn;
}

@keyframes fadeIn {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}
</style>
<script>
  const messages = document.querySelectorAll('.logos');
let i = 1;

function messageAppear() {
  if (i > 2) {
    i = 0;
  }

  messages.forEach(logos => {
    logos.classList.remove('appear');    
  });

  messages[i].classList.add('appear');
  i++;
}

setInterval(messageAppear, 4500);
</script>


